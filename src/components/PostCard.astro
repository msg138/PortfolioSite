---

export interface PostFrontmatterInterface {
    title: string;
    slug: string;
    createdAt: string;
    description: string;
    author: string;
    updatedAt?: string | null;
}

const { post }: { post: PostFrontmatterInterface } = Astro.props;
---
<a
    class="card"
    href={`/posts/${post.slug}`}
>
    <h3 class="card__title">
        {post.title}
    </h3>
    <b class="card__subtitle">
        {new Date(post.createdAt).toLocaleDateString()}
    </b>
    <p class="card__description">
        {post.description}
    </p>
</a>
<style>
    .card {
        color: black;
        text-decoration: none;
        border: 3px solid black;
        border-radius: 5px;
        padding: 20px;
        width: calc(33% - 20px);
        margin: 0 10px 20px;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;;
        box-shadow: 2px 3px 3px rgba(0,0,0,0.1);
        transition: transform 300ms, box-shadow 300ms;
        transform: translateY(0);
    }

    .card:hover {
        transform: translateY(-3px);
        box-shadow: 2px 6px 4px rgba(0,0,0,0.1);
    }

    .card__title {
        margin: 0 0 5px;
        font-size: 2rem;
    }

    .card__subtitle {
        margin: 0 0 10px;
        font-size: 1.5rem;
    }

    .card__description {
        margin: 0;
        font-size: 1rem;
    }

    .card__description:not(:nth-last-of-type(1)) {
        margin-top: 10px;
    }

    @media (max-width: 1200px) {
        .card {
            width: calc(50% - 20px);
        }
    }

    @media (max-width: 900px) {
        .card {
            width: calc(100% - 20px);
        }

        .card__title {
            font-size: 2.5rem;
        }

        .card__subtitle {
            font-size: 2rem;
        }

        .card__description {
            font-size: 1.5rem;
        }

        .card__description:not(:nth-last-of-type(1)) {
            margin-top: 20px;
        }
    }
</style>